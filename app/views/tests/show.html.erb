<%= link_to 'Back', tests_path %>
<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>
<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<%= link_to 'Edit', edit_test_path(@test) %>
<%= link_to 'Delete',
                test_path(@test),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
<p>
  <%= link_to 'New question', new_test_question_path(@test) %>
</p>
<p>
  <%= render @test.questions %>
</p>
