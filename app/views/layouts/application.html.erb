<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav  class = 'nav user'>
      <%= link_to 'Test Guru!', root_path %>
      <% if logged_in? %>
        <span>Welcome, <b><%= current_user.name %></b> Guru </span>
        <%= link_to 'Sign out', signout_path, method: "delete", class: 'nav user' %>
      <% else %>
        <%= link_to 'Login', login_path %>
        <%= link_to 'Sign up', signup_path %>
      <% end %>
    </nav>

    <%= yield %>

  <%= render 'shared/footer' %>
  </body>
</html>
