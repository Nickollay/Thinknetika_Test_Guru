<% if current_user.is_a?(Admin) %>
  <nav  class = 'navbar navbar-dark bg-dark'>
    <%= link_to 'Test Guru!', root_path, class: "navbar-brand" %>

    <span class="navbar-text ">
      <%= link_to t('.feedback'), new_feedback_path %>
    </span>

    <%= link_to t('.title'), admin_tests_path %>
    <%= link_to 'Gists', admin_gists_path %>

    <span class="text-light">
      <%= t('.hello', name: current_user.name) %>
    </span>

    <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
  </nav>
<% else %>
  <nav  class = 'navbar navbar-light bg-light'>
    <%= link_to 'Test Guru!', root_path, class: "navbar-brand" %>
    <span class="navbar-text ">
      <%= link_to t('.feedback'), new_feedback_path %>
    </span>

    <span class="navbar-text ">
      <% if user_signed_in?  %>
        <b><%= t('.hello', name: current_user.name) %></b> |
          <%= link_to 'Logout', destroy_user_session_path, method: "delete", class: '' %>
      <% else %>
        <%= link_to 'Login', new_user_session_path %> |
          <%= link_to 'Sign up', new_user_registration_path %>
      <% end %>
    </span>
  </nav>
<% end %>
