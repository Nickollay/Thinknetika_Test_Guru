<% if resource&.errors.present? %>
  <div class='col-8'>
<!--    <h2><%#= pluralize(resource.errors.count, "error", plural: "errors") %> occurred:</h2>-->
    <h2><%= t('.header', count: resource.errors.count) %></h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>

        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
