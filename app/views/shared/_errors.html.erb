<% if resource&.errors.present? %>
  <%= content_tag :div, class: 'col-8 resource-errors', data: { resource_id: resource.id } do %>
<!--    <h2><%#= pluralize(resource.errors.count, "error", plural: "errors") %> occurred:</h2>-->
    <h2><%= t('.header', count: resource.errors.count) %></h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>

        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
